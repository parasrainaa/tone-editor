{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts", 
      "use": "@vercel/bun"      
    },
    {
      "src": "client/package.json", 
      "use": "@vercel/static-build", 
      "config": {
        "distDir": "dist" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    }
  ]
}
